


<h1> PAPER TOOL </h1>

 


    <% if @they == @we_play_paper %>
      <p style="color: green"><%= "We played #{@we_play_paper}!" %></p>
      <p style="color: blue"><%= "They played #{@they}!" %></p>   
      <p style="color: green"><%= @draw %></p>   
      
    
    <% elsif @they == "scissors" %>
      <p style="color: green"><%= @we_paper %></p> 
      <p style="color: red"><%= @they_scissors %></p>  
      <p style="color: green"><%= @lose %></p>   
       

      

    <% elsif @they == "rock" %>
      <p style="color: green"><%= @we_paper %></p>  
      <p style="color: green"><%= @they_rock %></p>    
      <p style="color: green"><%= @win %></p>  
      

    <% else %>
      <p><%= 1 %></p>  


    <% end %>


